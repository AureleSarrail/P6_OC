{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <img src="{{ asset('Images/HomePic.jpg') }}" alt="" id="homePic">

    <a href="#Tricks_Block">
        <img src="{{ asset('Images/ancre.png') }}" alt="" id="anchor">
</a>

<div id="Tricks_Block" class="row">
    {% for Trick in Tricks %}
        <div class="col-lg-2">
            <div class="row trickHome">
                <img src="{{ Trick.images.first.url }}" alt="" class="col-lg-12">
                <a href="{{ path('show', {'id': Trick.id}) }}"><p class="col-lg-6">{{ Trick.trickname }}</p></a>
                <a href="{{ path('updateTrick') }}" class="col-lg-3"><img src="{{ asset('Images/pencil.png') }}" alt=""></a>
                <a href="{{ path('deleteTrick') }}" class="col-lg-3"><img src="{{ asset('Images/Trash.png') }}" alt=""></a>
            </div>
        </div>

    {% endfor %}
</div>

{% endblock %}
