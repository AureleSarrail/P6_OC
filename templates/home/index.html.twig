{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <img src="{{ asset('Images/HomePic.jpg') }}" alt="" id="homePic">

    <a href="#Tricks_Block">
        <img src="{{ asset('Images/ancre.png') }}" alt="" id="anchor">
</a>

<div id="Tricks_Block" class="row">
    {% for trick in tricks %}
        <div class="col-lg-2">
            <div class="row trickHome">
                <div class="col-lg-12">
                    <img src="{{ trick.defaultImage}}" alt="" class="col-lg-12">
                </div>
                <div class="col-lg-6">
                    <a href="{{ path('show', {'id': trick.id}) }}"><p class="col-lg-6">{{ trick.trickname }}</p></a>
                </div>
                <div class="col-lg-3">
                    <a href="{{ path('updateTrick', {'id': trick.id}) }}" class="col-lg-3"><img src="{{ asset('Images/pencil.png') }}" alt=""></a>
                </div>
                <div class="col-lg-3">
                    <a href="{{ path('deleteTrick', {'id': trick.id}) }}" class="col-lg-3"><img src="{{ asset('Images/Trash.png') }}" alt=""></a>
                </div>
            </div>
        </div>

    {% endfor %}
</div>

{% endblock %}
