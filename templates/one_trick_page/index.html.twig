{% extends 'base.html.twig' %}

{% block title %} {{ Trick.trickname }} {% endblock %}

{% block body %}

    <img src="{{ Trick.images.first.url }}" alt="" id="mainPic">

    <div class="row">
        {% for Image in Trick.images %}

            {% if loop.first %}

            {% else %}

                <div class="col-lg-2">
                    <img src="{{ Image.url }}" alt="" class="col-lg-12" id="OneTrickPics">
                </div>

            {% endif %}

        {% endfor %}



        {% for Video in Trick.videos %}

            <div class="col-lg-2">
                <iframe src="{{ Video.url }}" frameborder="0" class="col-lg-12" id="OneTrickVids"></iframe>
            </div>
        {% endfor %}

    </div>

    <div class="row">
        <div class="col-lg-1"></div>
        <p class="col-lg-10 text-center">{{ Trick.description }}</p>
        <div class="col-lg-1"></div>
    </div>

    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6 row">
            <p class="col-lg-4 text-center" id="infoTrick">Créé le {{ Trick.createdAt | date('d/m/Y') }}</p>
            <p class="col-lg-4 text-center" id="infoTrick">Catégorie : {{ Trick.category.title }}</p>
            <p class="col-lg-4 text-center" id="infoTrick">Mis à jour le {{ Trick.updatedAt | date('d/m/Y') }}</p>
        </div>
        <div class="col-lg-3"></div>
    </div>
{% endblock %}
